        <TextView
            android:id="@+id/blog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:text=""
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
