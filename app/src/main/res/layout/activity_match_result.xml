<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Match_Result"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:text="好友匹配"
            android:textColor="@color/black"
            android:textSize="26dp">

        </TextView>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:text="刷新"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:background="#00000000"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp">

        <ListView
            android:id="@+id/firend_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/cardview_shadow_start_color"></View>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="24dp"
        android:layout_marginTop="6dp">

        <ImageButton
            android:id="@+id/homebtn1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:adjustViewBounds="true"

            android:background="@mipmap/home" />

        <ImageButton
            android:id="@+id/matchbtn1"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:background="@mipmap/match" />

        <ImageButton
            android:id="@+id/postbtn1"
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:background="@drawable/post" />

        <ImageButton
            android:id="@+id/messagebtn1"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:background="@mipmap/message" />

        <ImageButton
            android:id="@+id/userbtn1"
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:background="@mipmap/user" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="48dp"
            android:textSize="10dp"
            android:text="首页"/>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="58dp"
            android:text="匹配"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="55dp"
            android:text="发帖"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="54dp"
            android:text="消息"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="54dp"
            android:textSize="10dp"
            android:text="我的"/>
    </LinearLayout>

</LinearLayout>